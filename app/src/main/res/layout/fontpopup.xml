<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_with_white_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_tab_bgColor"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/linearV"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_corner_with_white_bg"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <ImageView
                        android:id="@+id/img_bg_white"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:src="@drawable/circle_white" />

                    <ImageView
                        android:id="@+id/img_bg_sepia"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:src="@drawable/circle_sepia" />

                    <ImageView
                        android:id="@+id/img_bg_black"
                        android:layout_width="100dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:src="@drawable/circle_black" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_tab_font"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_1em"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_1em"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight=".5"
                            android:background="@color/green"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_11em"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/gray"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_11em"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight=".5"
                            android:background="@color/green"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_12em"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/gray"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_12em"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight=".5"
                            android:background="@color/green"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_13em"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/gray"
                            android:textSize="23sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_13em"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight=".5"
                            android:background="@color/green"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_14em"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="@color/gray"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_14em"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight=".5"
                            android:background="@color/green"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_shadow" />
            </RelativeLayout>

            <!-- <Button -->
            <!-- android:id="@+id/btn_save_setting" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="30dp" -->
            <!-- android:layout_gravity="right" -->
            <!-- android:layout_marginTop="10dp" -->
            <!-- android:background="@color/green" -->
            <!-- android:gravity="right" -->
            <!-- android:text=" Save " -->
            <!-- android:textColor="@color/white" -->
            <!-- android:textSize="@dimen/txt_sample_test" /> -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>